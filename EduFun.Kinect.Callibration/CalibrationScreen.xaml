<Window x:Class="EduFun.Kinect.Callibration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        WindowState="Maximized"
        WindowStyle="None"
        Name="Window"
        Loaded="Window_Loaded_1" Closing="Window_Closing"
        MinHeight="768"
        MinWidth="1024"
        Height="768"
        Width="1024"
        >

    <Canvas x:Name="canvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Margin="0,0,0,0" Height="{Binding ElementName=Window, Path=ActualHeight}" Width="{Binding ElementName=Window, Path=ActualWidth}" />
    

</Window>
